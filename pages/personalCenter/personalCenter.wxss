.personalCenter_box {
    height: calc(100vh - 100rpx);
    background: #f4f4f4;
}

/*  */
.avatar_box {
    height: 350rpx;
    background: var(--topicColor);
    padding-bottom: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    color: #fff;
    font-size: 32rpx;
    letter-spacing: 5rpx;
}

.mian_box {
    width: 710rpx;
    position: absolute;
    top: 325rpx;
    left: 50%;
    transform: translateX(-50%);
}

/*  */
.mian_box .tab_box {
    background: #fff;
    height: 50px;
    padding: 0 50rpx;
    border-radius: 10rpx 10rpx 0 0;
    display: flex;
    font-size: 25rpx;
    justify-content: space-between;
    align-items: center;
}

.mian_box .tab_box>view {
    text-align: center;
}

/*  */
.orders_box {
    margin: 15rpx 0;
}

.orders_box>view:nth-of-type(1) {
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: center;
    height: 130rpx;
    font-size: 24rpx;
    padding: 0 50rpx;
    background: #fff;
}

.orders_box>view:nth-of-type(1) image {
    width: 50rpx;
    height: 50rpx;
}